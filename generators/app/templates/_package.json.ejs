{
  "name": "<%= appnameKebabCase() %>",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "paths": {
    "srcFolder": "src/",
    <%_ if (projectType === 'bedrock') { -%>
    "distFolder": "./web/app/themes/<%= wordpressTemplateName %>/static",
    "criticalCss": "./web/app/themes/<%= wordpressTemplateName %>/static/css/critical",
    "templatesFolder": "./web/app/themes/<%= wordpressTemplateName %>/templates/**/*.{twig,html}",
    <%_ } else if(projectType === 'craft') { -%> 
    "distFolder": "./web/assets",
    "criticalCss": "./templates/_includes/css/critical",
    "templatesFolder": "./templates/**/*.{twig,html}",
    <%_ } else { -%>
    "distFolder": "dist/",
    "criticalCss": "dist/css/critical",
    <%_ } -%>
    "criticalPages": {
        <%_ if (projectType === 'bedrock' || projectType === 'craft') { -%>
        "home": "<%= siteUrl %>"
        <%_ } else { -%>
        "home": "index.html"
        <%_ } -%>
    }<%_ if (includeTailwind) { -%>,
    "purgeFiles": [
      <%_ if (projectType === 'html') { -%>
      "./src/**/*.{html}",
      <%_ } else if (projectType === 'bedrock') { -%>
      "./web/app/themes/<%= wordpressTemplateName %>/templates/**/*.{twig,html}",
      <%_ } else if (projectType === 'craft') { -%>
      "./templates/**/*.{twig,html}",
      <%_ } -%>
      "./src/js/**/*.js"
    ]
    <%_ } -%>
  },
  "favicon": {
    "themeColor": "#ffffff",
    "backgroundColor": "#da532c"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "autoprefixer": "^10.0.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "critical": "^1.3.9",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "es6-promise-pool": "^2.5.0",
    "eslint": "^7.26.0",
    "expose-loader": "^0.7.5",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-dependents": "^1.2.3",
    "gulp-eslint": "^6.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-inject": "^5.0.5",
    "gulp-load-plugins": "^2.0.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-real-favicon": "^0.3.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-uglify": "^3.0.2",
    "postcss": "^8.1.10",
    "postcss-clean": "^1.1.0",
    "through2": "^3.0.1",
    "webpack": "^4.42.1",
    "webpack-stream": "^5.2.1"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production gulp",
    "build:dev": "cross-env NODE_ENV=development gulp",
    "critical-css": "cross-env NODE_ENV=development gulp critical",
    "critical-css:dist": "cross-env NODE_ENV=production gulp critical",
    "frontend": "gulp sass js",
    "frontend:dist": "cross-env NODE_ENV=production gulp sass js",
    "serve": "cross-env NODE_ENV=development gulp serve || exit 0", 
    "serve:dist": "cross-env NODE_ENV=production gulp serve || exit 0",
    "start": "gulp serve || exit 0",
    "tasks": "gulp --tasks"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ]
}
